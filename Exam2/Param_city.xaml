<Window x:Class="Exam2.Param_city"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exam2"
        mc:Ignorable="d"
        Title="Param_city" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="combo_choice_city" HorizontalAlignment="Left" Margin="305,173,0,0" Visibility="Visible" VerticalAlignment="Top" Width="126" >
            <ComboBoxItem Content="Москва"/>
            <ComboBoxItem Content="Санкт-Петербург"/>
            <ComboBoxItem Content="Астана"/>
            <ComboBoxItem Content="Алматы"/>
        </ComboBox>
        <TextBlock x:Name="text_choice_category" Text="Выберите город:" Visibility="Visible" HorizontalAlignment="Left" Margin="306,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="-0.086,-0.986" Height="26" Width="131"/>
        <Button x:Name="btn_ok" Content="Готово" HorizontalAlignment="Left" Margin="330,232,0,0" VerticalAlignment="Top" Width="75" Click="btn_ok_Click" RenderTransformOrigin="0.172,2.919"/>

    </Grid>
</Window>
